<html>
    <head>

    </head>
    <body>
        <header>
            <h1>Shop</h1>

        </header>

        <form action="/displayaddform">
            <button type="submit" name="btn" id="btn" value="btn">Add new Product</button>

            <table border="2">
                <thead>
                    <tr>
                        <th>Product id</th>
                        <th>Product name</th>
                        <th>Price</th>
                        <th>action</th>
                    </tr>
                </thead>
                <tbody>
                    <%for(var i=0;i<proddata.length;i++)
                    {%>
                        <tr>
                            <td><%=proddata[i].prodid%></td>
                            <td><%=proddata[i].pname%></td>
                            <td><%=proddata[i].price%></td>
                            <td>
                                <a href="/edit/<%=proddata[i].prodid%>">edit</a>
                                <a href="/delete/<%=proddata[i].prodid%>">delete</a>
                            </td>
                        </tr>

                    <%}%>
                </tbody>
            </table>
        </form>
    </body>
</html>
